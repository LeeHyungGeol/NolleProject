<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/sv_root">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="후기를 공유해주세요"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/findPlaceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="음식점 찾기"
        android:textSize="18sp" />

    <AutoCompleteTextView
        android:id="@+id/autocomplete"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="16dp"
        android:hint="검색할 장소를 입력해주세요"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/imageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="사진"
        android:textSize="18sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#E8E3E3"
                android:foreground="@drawable/ic_add_black_24dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="별점"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:isIndicator="false"
            android:max="5"
            android:numStars="5"
            android:stepSize="0.5" />
    </LinearLayout>

    <TextView
        android:id="@+id/reviewTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="리뷰"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/placeReviewText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/review_border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="리뷰를 작성해주세요"
        android:inputType="textMultiLine"
        android:maxLength="50" />

    <TextView
        android:id="@+id/placeReviewLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0 /50 글자 수" />

    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="태그"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/placeTagText"
            android:layout_width="0dp"
            android:maxLength="22"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:bufferType="spannable"
            android:ems="10"
            android:hint="#맛집 #감성 #데이트" />
    </LinearLayout>

    <Button
        android:id="@+id/boardBtn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="게시"
        android:textSize="14sp" />


    </LinearLayout>
</ScrollView>