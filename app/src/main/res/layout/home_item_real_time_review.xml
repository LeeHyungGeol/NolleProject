<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/imageView_homeFragment_real_time_review_place_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView_homeFragment_real_time_review_user_image"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_margin="3dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#000000"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:id="@+id/textView_homeFragment_real_time_review_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:text="UserName" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_homeFragment_real_time_review_place_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"
                        android:paddingLeft="6dp"
                        android:text="PlaceName"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RatingBar
                        android:id="@+id/ratingBar_homeFragment_real_time_review"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/textView_homeFragment_real_time_review_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"
                        android:paddingLeft="6dp"
                        android:text="RealTimeReview"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
</androidx.cardview.widget.CardView>

